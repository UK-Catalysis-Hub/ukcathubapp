<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Article author</th>
      <th>Affiliation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% cr_affiliations.each do |cr_affiliation| %>
      <tr>
        <td><%= cr_affiliation.name %></td>
        <td><%= cr_affiliation.article_author_id %></td>
        <td><%= cr_affiliation.author_affiliation_id %></td>
        <td><%= link_to 'Show', cr_affiliation %></td>
      </tr>
    <% end %>
  </tbody>
</table>
