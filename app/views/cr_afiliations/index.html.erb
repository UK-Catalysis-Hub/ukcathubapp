<h1>Cr Afiliations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Article author</th>
      <th>Affiliation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cr_afiliations.each do |cr_afiliation| %>
      <tr>
        <td><%= cr_afiliation.name %></td>
        <td><%= cr_afiliation.article_author_id %></td>
        <td><%= cr_afiliation.affiliation_id %></td>
        <td><%= link_to 'Show', cr_afiliation %></td>
        <td><%= link_to 'Edit', edit_cr_afiliation_path(cr_afiliation) %></td>
        <td><%= link_to 'Destroy', cr_afiliation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

