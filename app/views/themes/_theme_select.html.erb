  <div class="row" id="theme-selector" data-controller='theme-mapper'>
    <div class = "col-md-5">
      <label>Available themes</label>
      <select id="available_themes" multiple>
        <% available_themes.each do |theme| %>
          <option value="<%= theme.id %>"><%= theme.name %></option>
        <% end %>
      </select>
    </div>
    <div class = "col-md-2 d-flex justify-content-center align-items-center"">
      <button type="button" class="btn btn-primary me-2" data-action="click->theme-mapper#moveTheme" data-from="available_themes" data-to="assigned_themes">Add →</button>
      <button type="button" class="btn btn-primary " data-action="click->theme-mapper#moveTheme" data-from="assigned_themes" data-to="available_themes">← Remove</button>
    </div>
    <div class = "col-md-5">
      <label>Assigned themes</label>
      <select id="assigned_themes" name="theme_container[theme_type_ids][]" multiple>
        <% selected_themes.each do |theme| %>
          <option value="<%= theme.id %>"><%= theme.name %></option>
        <% end %>
      </select>
    </div>  
  </div>

 
