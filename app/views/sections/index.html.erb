<!-- Sections index  -->
<div class ="container">

  <p style="color: green"><%= notice %></p>

  <h1>Sections</h1>

  <table class="table table-sm table-striped table-bordered">
    <thead class="thead-light">
      <tr>
        <th>Object name</th>
        <th>Display name</th>
        <th>Heading</th>
        <th>Description</th>
        <th>Visible</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @sections.each do |section| %>
        <tr>
          <td><%= section.obj_name %></td>
          <td><%= section.name %></td>
          <td><%= section.heading %></td>
          <td><%= section.description %></td>
          <td><%= section.visible %></td>
          <td><%= link_to 'Show', section %></td>
          <td><%= link_to 'Edit', edit_section_path(section) %></td>
          <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "New section", new_section_path %>
</div>
