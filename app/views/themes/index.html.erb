<p id="notice"><%= notice %></p>

<h1>Themes</h1>

<table>
  <thead>
    <tr>
      <th>Short</th>
      <th>Name</th>
      <th>Lead</th>
      <th>Phase</th>
      <th>Used</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @themes.each do |theme| %>
      <tr>
        <td><%= theme.short %></td>
        <td><%= theme.name %></td>
        <td><%= theme.lead %></td>
        <td><%= theme.phase %></td>
        <td><%= theme.used %></td>
        <td><%= link_to 'Show', theme %></td>
        <td><%= link_to 'Edit', edit_theme_path(theme) %></td>
        <td><%= link_to 'Destroy', theme, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

