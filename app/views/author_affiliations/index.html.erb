<p id="notice"><%= notice %></p>

<h1>Author Affiliations</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Name</th>
      <th>Short name</th>
      <th>Add 01</th>
      <th>Add 02</th>
      <th>Add 03</th>
      <th>Add 04</th>
      <th>Add 05</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @author_affiliations.each do |author_affiliation| %>
      <tr>
        <td><%= author_affiliation.author_id %></td>
        <td><%= author_affiliation.name %></td>
        <td><%= author_affiliation.short_name %></td>
        <td><%= author_affiliation.add_01 %></td>
        <td><%= author_affiliation.add_02 %></td>
        <td><%= author_affiliation.add_03 %></td>
        <td><%= author_affiliation.add_04 %></td>
        <td><%= author_affiliation.add_05 %></td>
        <td><%= author_affiliation.country %></td>
        <td><%= link_to 'Show', author_affiliation %></td>
        <td><%= link_to 'Edit', edit_author_affiliation_path(author_affiliation) %></td>
        <td><%= link_to 'Destroy', author_affiliation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

