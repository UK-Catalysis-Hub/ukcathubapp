<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Add 01</th>
      <th>Add 02</th>
      <th>Add 03</th>
      <th>Add 04</th>
      <th>Country</th>
      <th>Affiliation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.add_01 %></td>
        <td><%= address.add_02 %></td>
        <td><%= address.add_03 %></td>
        <td><%= address.add_04 %></td>
        <td><%= address.country %></td>
        <td><%= address.affiliation_id %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

