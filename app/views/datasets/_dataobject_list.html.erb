<!--Display a filtered list of data_objects -->
<div id="filtered_data_object_list" class="container">
  <% #= will_paginate data_objects, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  <table class="table table-striped table-sm">
    <thead class="thead-light">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Publised</th>
      </tr>
    </thead>
    <tbody>
      <% data_objects.each do |data_object| %>
        <tr>
          <td>
             <%= link_to(data_object.dataset_name, data_object) %>
          </td>
          <td>
             <% ds_desc = data_object.dataset_description.gsub('Supplementary', "Supl.") %>
             <% ds_desc.gsub('Supporting', "Supr.") %>
             <%= ds_desc[0..71]+'...' %>
          </td>
          <td>
            <%= data_object.dataset_startdate.to_date().year %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
