 <div class="container">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Affiliation:</strong>
    <%= @affiliation.institution %>
  </p>
  <p>
    <strong>Country:</strong>
    <%= @affiliation.country %>
  </p>
  <p>
    <strong>Sector:</strong>
    <%= @affiliation.sector %>
  </p>
  <% addr_list = @affiliation.get_addresses() %>
  <% addr_list.each do |unique_add| %>
    <br><strong>Address:</strong>
    <br><%= link_to unique_add.add_01, unique_add %>
    <br><%= unique_add.add_02 %>
    <br><%= unique_add.add_03 %>
    <br><%= unique_add.add_04 %>
    <br><%= unique_add.country %>
  <% end %>
  <% #= link_to 'Edit', edit_affiliation_path(@affiliation) %>
  <% #= link_to 'Back', affiliations_path %>
</div>
