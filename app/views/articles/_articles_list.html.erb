<!--Display a filtered list of articles -->
<div id="filtered_artilcle_list" class="container">
  <% #= will_paginate articles, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  <table class="table table-striped table-sm">
    <thead class="thead-light">
      <tr>
        <th>Articles (<%= articles.length() %>)</th>
      </tr>
    </thead>

    <tbody>
      <% articles.each do |article| %>
        <tr>
          <td>
            <%= render partial: 'articles/publication_card', locals: {article: article }%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
      
  
  <div class="container">
    <div class="row">
    <p>Articles (<%= articles.length() %>)</p>
    <% articles.each_slice(3) do |group| %>
      <% group.each do |item| %>
        <%= render partial: 'articles/publication_thumbnail', locals: {article: item }%>
      <% end %>
    <% end %>
    </div>
</div>
