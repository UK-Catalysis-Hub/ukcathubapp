<div class="container">
<p id="notice"><%= notice %></p>

<h1>UK Catalysis Hub Authors</h1>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th>Full name</th>
      <th>Last name</th>
      <th>Given name</th>
      <th>Orcid</th>
      <th>Articles</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.last_name %></td>
        <td><%= author.given_name %></td>
        <td><%= author.orcid %></td>
        <td><%= author.articles %></td>
        <td><%= link_to 'Show', author, :class => "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_author_path(author), :class => "btn btn-success btn-sm" %></td>
        <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
<%= link_to 'New Author', new_author_path %>
